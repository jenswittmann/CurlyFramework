[*.{css,scss,less,js,json,ts,sass,html,hbs,mustache,phtml,html.twig,md,php}]
charset = utf-8
indent_style = space
indent_size = 4
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

[*.md,yml]
indent_size = 2
trim_trailing_whitespace = false

[package.json,.{babelrc,editorconfig,eslintrc,lintstagedrc,stylelintrc}]
indent_style = space
indent_size = 2
